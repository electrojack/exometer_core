%% -*- erlang -*-
{erl_first_files,
 [
  "src/exometer_igor.erl",
  "src/exometer_util.erl",
  "src/exometer_entry.erl",
  "src/exometer_probe.erl"
 ]}.

{deps,
 [
  {lager, "2.*", {git, "https://github.com/basho/lager.git", {tag,"2.2.0"}}},
  {parse_trans, ".*", {git, "https://github.com/electrojack/parse_trans.git", {branch,"2.9.x"}}},
  {folsom, "0.7.4p5", {git, "https://github.com/basho/folsom.git", {tag, "0.7.4p5"}}},
  {setup, ".*", {git, "https://github.com/electrojack/setup.git", {branch, "th/fix-edown-version"}}}
 ]}.

{erl_opts,
 [
  debug_info,
  fail_on_warning,
  {parse_transform, lager_transform},
  {verbosity, trace}
 ]}.

{sub_dirs, ["src"]}.

{edoc_opts,
 [
  {doclet, edown_doclet},
  {app_default, "http://www.erlang.org/doc/man"},
  {doc_path, []},
  {top_level_readme,
   {"./README.md",
    "https://github.com/Feuerlabs/exometer_core", "master"}}
 ]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_functions_calls,
  deprecated_functions
 ]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{clean_files, ["test/app1/ebin/*.beam"]}.
